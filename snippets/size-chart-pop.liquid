  
<div class="sizechart" style="display:none;">
    <div class="sizechart-container">
    <span class="close-pop" onclick="$('.sizechart').hide()">{%include 'icon-close'%}</span>
  <img src="{{shop.metafields.productMetaFields.sizeChartImage}}">
    </div>
    
  </div>
  
  <script>
   $(function(){
      $('.sizeChart-link').click(function(e){
      e.preventDefault();
        $('.sizechart').fadeIn();
      });
    });
    
    
      $(document).mouseup(function(e) 
  {
      var container = $(".sizechart img");
  
      
      if(!($(window).outerWidth() <= e.clientX)){
      
      // if the target of the click isn't the container nor a descendant of the container
      if (!container.is(e.target) && container.has(e.target).length === 0 ) 
      {
          $('.sizechart').hide();
      }
       
        }
  });
    
    $( document ).on( 'keydown', function ( e ) {
      if ( e.keyCode === 27 ) { // ESC
          $( '.sizechart' ).hide();
      }
  });
  </script>
  <style>
  
  .sizechart{
    display:none;
        position: fixed;
      background: rgba(0,0,0,.75);
      width: 100%;
      height: 100%;
      z-index: 99999;
  
      top: 0;
      left: 0;
      align-items: center;
      justify-content: center;
  }
  .sizechart img{
     width: auto;
      position: absolute;
      max-width:90%;
      top: 0;
      max-height: 90%;
  
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      
  }
  .sizechart .close-pop{
          position: absolute;
          top: 20px;
          right: 20px;
          cursor: pointer;
      
      }
  .sizechart .close-pop .icon{fill: white;}
  </style>