
<section class="our_collection mosaic-collections">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 section-header text-center">
    <h5>{{ section.settings.subheading }}</h5>
      <h2 class="home-main-h1">{{ section.settings.heading }}</h2>
    </div>
        {% for block in section.blocks %}
          {% comment %}
          {% assign mod = forloop.length | modulo: 2 %}
          {% unless block == section.blocks.last and mod > 0 %}
            {% endunless %}
          {% endcomment %}
        <div class="cat-item col-xs-12 col-md-6 col-lg-4">
          
          <div class="wrapper">
            <img src="{{ block.settings.categoryImage | img_url: 'master', format: 'pjpg' }}" alt="{{ section.settings.heading }} {{ block.settings.categoryTitle }}">
          
            <div class="info">
            <h4 class="cat-title">{{ block.settings.categoryTitle }}</h4>
          {% if block.settings.categoryLink %}
          
            <a href="{{ block.settings.categoryLink }}" class="btn">
              {{ section.settings.buttonText }}
            </a>  
            {% endif %}
            </div>
            
          </div>
        </div>
            {% endfor %}
      </div>
    </div>
  </section>
  
  <style>
    .mosaic-collections{margin-bottom:120px;}
    .mosaic-collections .wrapper{
      position:relative;
      height:450px;
    }
    .mosaic-collections .cat-item-wide .wrapper{height:400px;}
    .mosaic-collections .wrapper > img{
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
      object-fit:cover;
      object-position:center;
    }
    .mosaic-collections .wrapper .info{
      position:absolute;
      height:fit-content;
      text-align:center;
      width:100%;
      top:0;
      left:0;
      bottom:0;
      margin:auto;
      z-index:1;
    }
    .mosaic-collections .wrapper:before{content:"";background:#000;opacity:.2;position:absolute;top:0;left:0;width:100%;height:100%;z-index:1;}
    .mosaic-collections .wrapper .info .cat-title{
    margin: 0 0 20px 0;
    padding: 0;
    font-size: 44px;
    color: #ffffff;
    font-family: 'Didot';
      border:0;
      font-weight:normal;
    }
    .mosaic-collections .wrapper .info .btn{
      font-size: 16px;
    background: transparent;
    font-weight: 400;
      border:1px solid #fff;
    }
    .mosaic-collections .cat-item{margin-bottom:4px;padding-left:2px;padding-right:2px}
    .mosaic-collections .wrapper .info.info-left{
      width:30%;
    }
    .mosaic-collections .wrapper .info .btn:hover{background:#fff;color:#4e5151;}
  </style>

  
  {% schema %}
    {
      "name": "Home Collection Blocks",
      "settings": [
            {
              "id": "heading",
              "type": "text",
              "label": "Heading Title",
              "default": "Collection"
            },
            {
              "id": "subheading",
              "type": "text",
              "label": "Subheading",
              "default": "OUR SHOP"
            },
            {
              "id": "buttonText",
              "type": "text",
              "label": "Button Text",
              "default": "Shop Now"
            }
        ],
        "blocks": [
          {
            "type": "repeat",
            "name": "Category",
            "settings": [
              {
                "id": "categoryTitle",
                "type": "text",
              "label": "Category Title"
              },
          {
                "id": "categoryImage",
                "type": "image_picker",
              "label": "Category Image"
              },
            {
                "id": "categoryLink",
                "type": "url",
              "label": "Category Link"
              }
            ]
          }
        ],
	
      "presets": [
        {
          "name": "Home Collection Blocks",
          "category": "Custom"        
        }
      ]
    }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
