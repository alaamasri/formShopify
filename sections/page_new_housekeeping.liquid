<section class="about_page">
  <div class="abput_page_main" style="background-image: url({{ section.settings.main_banner| img_url: 'master', format: 'pjpg'}});">
    <div class="container">
      <div class="about_page_heding">
        <h1 class="main-title">{{ section.settings.heading }}</h1>
      </div>
    </div>
  </div>
</section>
<div class="clearfix"></div>

<section class="new_corporate ">
  <div class="container">
    <div class="coporate_heading">
      {% if section.settings.title != '' %}
      <h2>{{ section.settings.title }}</h2>
      {% endif %}
      <p>{{ section.settings.content }}</p>
    </div>
  </div>
  <div class="container">
    <div class="corporate_sec_one" style="background-image:url({{ section.settings.back_img | img_url:'master' }}); background-size:cover;">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 visible-xs">
          <div class="corporate_sec_right corporate_sec_right_housing left ">
            <h4>{{ section.settings.coll_title }}</h4>
            <h3>{{ section.settings.corpo_title }}</h3>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <div class="corporate_sec_left">
            <img style="float:right" src="{{ section.settings.left_img| img_url:'1024x', format: 'pjpg' }}" alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 hidden-xs">
          <div class="corporate_sec_right corporate_sec_right_housing left ">
            <h4>{{ section.settings.coll_title }}</h4>
            <h3>{{ section.settings.corpo_title }}</h3>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>
  <div class="corporate_sec_two">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12   ">
          <div class="left_corporate_sect">
            <div class="sect_two_img" style="margin-top:105px;">
              <div class="sect_two_img_absol" style="left:-60px;">
                <img src="{{ section.settings.left_back_img | img_url:'master' }}"  alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
              </div>
              <div data-delighter class="sect_two_left_img delighter bottom">
                <img src="{{ section.settings.left_men_img | img_url:'master', format: 'pjpg' }}" alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
              </div>
              <div class="left_corporate_sect">
                {{ section.settings.left_content_two }}
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12   ">
          <div class="right_img_men">
            <img src="{{ section.settings.right_men_img | img_url:'master', format: 'pjpg' }}" alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
          </div>
          <div class="row">
            {% for block in section.blocks limit:4 %}
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
              <div class="shirt_img">
                <img src="{{ block.settings.shirt_img | img_url:'master', format: 'pjpg' }}" alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="desc_section" style="background-color:{{ section.settings.bg_color }}" >
  <div class="desc_para">
    <h6>{{ section.settings.desc_title }}</h6>
  </div>
</section>

<section class="last_corpo_section">
  <div class="container">
    <div class="rwo">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="desc_left">
          <img src="{{ section.settings.desc_one | img_url:'master', format: 'pjpg' }}"  alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" >
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="desc_right">
          <img src="{{ section.settings.desc_two | img_url:'master', format: 'pjpg' }}"  alt="{{ section.settings.coll_title }} {{ section.settings.corpo_title }}" class="r-zoom-in-out">
          <p>{{ section.settings.desc_para }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media only screen and (max-width: 767px) and (min-width: 200px){
    .sect_two_img {
      margin-top: 30px !important;
    }
  }
</style>

